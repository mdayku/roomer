{
  "name": "@app/server",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json && npm run build:lambda",
    "build:lambda": "esbuild src/lambda.ts --bundle --platform=node --target=node20 --format=cjs --outfile=dist/lambda.js --external:@aws-sdk/* --external:aws-sdk",
    "start": "node dist/index.js",
    "test": "vitest",
    "convert:coco": "tsx scripts/convert_coco_to_geojson.ts --ann ../../cubicasa5k_coco/train_coco_pt.json --out ../../cubicasa5k_geojson --auto-room-cat --min-area 20",
    "convert:svg": "tsx scripts/convert_cubicasa_svg_to_geojson.ts --in ../../cubicasa5k/cubicasa5k --out ../../cubicasa5k_svg_geojson --room-classes room Room Area Space",
    "prepare-dataset": "tsx scripts/combine_and_split_datasets.ts --coco-dir ../../cubicasa5k_geojson --svg-dir ../../cubicasa5k_svg_geojson --output-dir ../../room_detection_dataset",
    "clean-dataset": "tsx scripts/clean_dataset.ts --input-dir ../../room_detection_dataset --output-dir ../../room_detection_dataset_clean",
    "convert-to-coco": "tsx scripts/convert_geojson_to_coco.ts --input-dir ../../room_detection_dataset_clean --output-dir ../../room_detection_dataset_coco",
    "train:mask-rcnn": "cd ../../room_detection_training && python train.py",
    "train:yolo": "cd ../../room_detection_training && python train_yolo.py",
    "train:sagemaker": "cd ../../room_detection_training && python sagemaker_train.py",
    "check:aws": "cd ../../room_detection_training && python check_aws.py"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "multer": "^1.4.5-lts.1",
    "serverless-http": "^3.2.0",
    "yargs": "^18.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.5",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.0",
    "esbuild": "^0.25.12",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  }
}
